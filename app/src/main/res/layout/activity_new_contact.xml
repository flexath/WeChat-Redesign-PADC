<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_new_contract"
    tools:context=".activities.NewContactActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBackNewContact"
        android:layout_width="@dimen/width_30dp"
        android:layout_height="@dimen/height_30dp"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        app:srcCompat="@drawable/button_back_white" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/btnBackNewContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_36dp"
        android:background="@drawable/background_tap_to_scan_new_contract"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTapToScan"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_centerHorizontal="true"
            android:text="@string/lbl_tap_to_scan"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="@dimen/text_regular_2x_n"
            android:textColor="@color/colorPrimaryText"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tvTapToScan"
            android:layout_marginTop="@dimen/margin_5dp"
            android:layout_marginStart="@dimen/margin_14dp"
            android:layout_marginEnd="@dimen/margin_14dp"
            android:fontFamily="@font/noto_sans_myanmar_regular"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/colorPrimaryText"
            android:text="@string/lbl_scan_the_qr_code_to_add_your_frined_in_ncontact"
            android:gravity="center"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivScanImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/button_scan"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSelectQRScanImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_70dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/button_select_qr"/>


</RelativeLayout>