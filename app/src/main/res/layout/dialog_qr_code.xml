<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#80000000"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivQRCodeProfileDialog"
        android:layout_width="@dimen/width_300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/icon_qr_profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCloseProfileDialog"
        android:layout_width="@dimen/width_24dp"
        android:layout_height="@dimen/height_24dp"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_card_medium"
        android:layout_marginTop="@dimen/margin_10dp"
        app:srcCompat="@drawable/button_close_qr_dialog" />

</FrameLayout>