<?xml version="1.0" encoding="utf-8"?>
<com.flexath.moments.views.viewpods.ContactsViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAlphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/margin_50dp"
        android:elevation="@dimen/margin_small"
        android:paddingStart="@dimen/margin_small"
        android:paddingEnd="@dimen/margin_small"
        tools:itemCount="26"
        tools:listitem="@layout/view_holder_alphabet_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContactsAlphabetGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        tools:listitem="@layout/view_holder_alphabet_group_contacts_list"
        android:layout_toStartOf="@+id/rvAlphabet" />

</com.flexath.moments.views.viewpods.ContactsViewPod>